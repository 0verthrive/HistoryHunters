@model HH.Models.Promo

@{
    ViewData["Title"] = "DeletePromo";
}

<h1>Apagar</h1>

<h3>Tem certeza que deseja apagar?</h3>
<div>
    <h4>Promoção</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoAnterior)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoAnterior)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoAtual)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoAtual)
        </dd>
    </dl>
    
    <form asp-action="DeletePromo">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Promo">Voltar</a>
    </form>
</div>
