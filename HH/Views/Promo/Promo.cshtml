@model IEnumerable<HH.Models.Promo>

@{
    ViewData["Title"] = "Promo";
}

<h1>Promoção</h1>

<p>
    <a asp-action="CreatePromo">Criar nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoAnterior)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoAtual)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoAnterior)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoAtual)
            </td>
            <td>
                <a asp-action="EditPromo" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="DetailsPromo" asp-route-id="@item.ID">Details</a> |
                <a asp-action="DeletePromo" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
